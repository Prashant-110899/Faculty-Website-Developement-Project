<%- include('./partials/navs')%>
<br><br><br>

<br>

<div class="container">
  <div class="row">


    <div class="post-container col-md-8">
      <%- include("./partials/notes/noteDetails"); %>
      <br>

      <div class="container">
        <% if(newItems) { %>

        <% newItems.forEach((item, i) => { %>

        <form class="item" action="/dashboard/delete" method="post">

          <%- include("./partials/posts/delete",{item:item}); %>

        </form>


        <!-- Modal -->
        <form class="item" action="/dashboard/edit" method="post">

          <%- include("./partials/posts/edit"); %>

        </form>

        <br>

        <% }); %>
        <% } else { %>
        <div class="container text-center">
          <h5>No notes to show. Enter subject and details to show up on the screen.</h5>
        </div>
        <% } %>

        <form class="item" action="/dashboard" method="post">

          <%- include("./partials/posts/generic"); %>

        </form>

      </div>
    </div>

    <br>

    <div class="card-container col-md-4">
      <!-- Button trigger modal -->
      <div class="container text-center">
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalLong">
          view card details upload instructions
        </button>
      </div>
      <hr>
      <div class="container">

        <%- include ("./partials/messages") %>

        <div class="row row-cols-1">
          <% if(files) { %>
          <% files.forEach(function(file) {  %>
            <form action="/dashboard/deleteCardData" method="post" enctype="multipart/form-data">
              <%- include("./partials/card",{file:file,renderedPage:''})%>
            </form>  
          <% }) %>
          <% } else { %>
          <p> No files to show </p>
          <% } %>


          <div class="dashboard-upload-card col mb-4">
            <div class="card h-100">
              <form id="cardImageUploadForm" class="" action="/dashboard/uploadCardData" method="post" enctype="multipart/form-data">
                <%- include("./partials/posts/uploadCardData")%>
              </form>
            </div>
          </div>

          <!-- Modal -->
          <form class="item" action="/dashboard/editCard" method="post">
            <%- include("./partials/posts/cardEdit") %>
          </form>

        </div>
      </div>
    </div>

    <div class="modal fade" id="exampleModalLong">
      <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Instructions</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- <p>Modal body text goes here.</p> -->
            <%- include("./partials/notes/cardNotes") %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>



  </div>

</div>
