<!-- Header ejs -->
<%- include('./partials/header',{headerTitle:'GROUP ACTIVITIES'})%>

<br><br><br><br><br>


<%- include("./partials/notes/noteDetails"); %>

<br>

<div class="container">
  <% if(newItems) { %>

  <% newItems.forEach((item, i) => { %>

  <form class="item" action="/dashboard/group-activities/delete" method="post">

    <%- include("./partials/posts/delete",{item:item}); %>

  </form>


  <!-- Modal -->
  <form class="item" action="/dashboard/group-activities/edit" method="post">

    <%- include("./partials/posts/edit"); %>

  </form>

  <br>

  <% }); %>
  <% } else { %>
    <div class="container text-center">
      <h5>No notes to show. Enter subject and details to show up on the screen.</h5>
    </div>
  <% } %>

  <form class="item" action="/dashboard/group-activities" method="post">

    <%- include("./partials/posts/generic"); %>

  </form>
</div>

<hr>
