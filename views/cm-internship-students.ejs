<!-- Header ejs -->
<%- include("./partials/tabs",{headerTitle:'CURRENT MEMBERS'}) %>
<br><br>
<%- include("./partials/notes/cardNotes") %>
<hr>
<div class="container">
  <div class="container w-25 sticky-top">
    <%- include ("./partials/messages") %>
  </div>

  <div class="row row-cols-1 row-cols-md-3">
    <% if(files) { %>
    <% files.forEach(function(file) {  %>
      <form action="/dashboard/cm-internship-students/deleteCardData" method="post" enctype="multipart/form-data">
        <%- include("./partials/card",{file:file,renderedPage:'/cm-internship-students'})%>
      </form>
    <% }) %>
    <% } else { %>
    <p> No files to show </p>
    <% } %>


    <div class="col mb-4">
      <div class="card h-100">
        <form id="cardImageUploadForm" class="" action="/dashboard/cm-internship-students/uploadCardData" method="post" enctype="multipart/form-data">
          <%- include("./partials/posts/uploadCardData")%>
        </form>
      </div>
    </div>

    <!-- Modal -->
    <form class="item" action="/dashboard/cm-internship-students/edit" method="post">
      <%- include("./partials/posts/cardEdit") %>
    </form>

  </div>
</div>
