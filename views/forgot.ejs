
<div class="container" style="height: 85vh;">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-key"></i> Forgot Password</h1>
        <%- include ("./partials/messages") %>
        <form action="/users/forgot" method="POST">
          <div class="form-group">
    				<label for="email">Email</label>
    				<input type="email" name="email" autofocus class="form-control" placeholder="Please enter your registered email...">
    			</div>
    			<div class="form-group">
    				<input type="submit" class="btn btn-primary" value="Reset Password">
    			</div>
        </form>
      </div>
    </div>
  </div>
</div>
